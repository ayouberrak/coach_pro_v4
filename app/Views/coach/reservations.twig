{% extends "layouts/base.twig" %}

{% block title %}Mes Réservations - CoachPro{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto space-y-8 animate-fade-in pb-20">

    <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-6 border-b border-borderGray/30 pb-8">
        <div>
            <h1 class="text-3xl font-bold tracking-tight text-white">Mes <span class="text-primaryGold">Réservations</span></h1>
            <p class="text-gray-500 mt-1 font-medium">Gestion simplifiée de votre emploi du temps.</p>
        </div>
        
        <div class="flex p-1 bg-darkCard border border-borderGray rounded-2xl w-fit shadow-2xl">
            <button onclick="filterReservations(event, 'all')" class="tab-btn active-tab px-5 py-2.5 rounded-xl text-[11px] font-black uppercase tracking-widest transition-all">Toutes</button>
            <button onclick="filterReservations(event, 'en-attente')" class="tab-btn px-5 py-2.5 rounded-xl text-[11px] font-black uppercase tracking-widest text-gray-500 hover:text-white transition-all">En attente</button>
            <button onclick="filterReservations(event, 'acceptee')" class="tab-btn px-5 py-2.5 rounded-xl text-[11px] font-black uppercase tracking-widest text-gray-500 hover:text-white transition-all">Acceptées</button>
            <button onclick="filterReservations(event, 'refusee')" class="tab-btn px-5 py-2.5 rounded-xl text-[11px] font-black uppercase tracking-widest text-gray-500 hover:text-white transition-all">Refusées</button>
        </div>
    </div>

    <div id="reservations-list" class="grid grid-cols-1 gap-3">
        
        <div class="res-item en-attente bg-darkCard border border-borderGray rounded-2xl p-5 hover:border-orange-500/30 transition-all">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center gap-5">
                    <div class="flex flex-col items-center justify-center min-w-[60px] h-14 bg-white/5 rounded-xl border border-white/10">
                        <span class="text-[10px] font-bold text-gray-400 uppercase">22 Jan</span>
                        <span class="text-sm font-bold text-white">14:00</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-white">Anas Mansouri</h3>
                        <p class="text-xs text-gray-500 font-medium">Durée: <span class="text-gray-300">1h 00min</span></p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="px-4 py-1.5 rounded-full bg-orange-500/10 border border-orange-500/20 text-[10px] font-black text-orange-500 uppercase tracking-widest">
                        En attente
                    </span>
                </div>
            </div>
        </div>

        <div class="res-item acceptee bg-darkCard border border-borderGray rounded-2xl p-5 hover:border-green-500/30 transition-all">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center gap-5">
                    <div class="flex flex-col items-center justify-center min-w-[60px] h-14 bg-green-500/5 rounded-xl border border-green-500/10">
                        <span class="text-[10px] font-bold text-green-500/70 uppercase">25 Jan</span>
                        <span class="text-sm font-bold text-white">09:30</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-white">Meryem Bennani</h3>
                        <p class="text-xs text-gray-500 font-medium">Durée: <span class="text-gray-300">45min</span></p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="px-4 py-1.5 rounded-full bg-green-500/10 border border-green-500/20 text-[10px] font-black text-green-500 uppercase tracking-widest">
                        Confirmée
                    </span>
                </div>
            </div>
        </div>

        <div class="res-item refusee bg-darkCard border border-borderGray rounded-2xl p-5 opacity-60">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center gap-5">
                    <div class="flex flex-col items-center justify-center min-w-[60px] h-14 bg-red-500/5 rounded-xl border border-red-500/10 text-red-500/50">
                        <span class="text-[10px] font-bold uppercase">12 Jan</span>
                        <span class="text-sm font-bold">18:00</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-gray-500 line-through">Omar Sadiki</h3>
                        <p class="text-xs text-gray-600 font-medium">Durée: 1h 30min</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="px-4 py-1.5 rounded-full bg-red-500/5 border border-red-500/10 text-[10px] font-black text-red-500/50 uppercase tracking-widest">
                        Refusée
                    </span>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .active-tab { background-color: #cfaa58 !important; color: #18191e !important; box-shadow: 0 4px 15px rgba(207, 170, 88, 0.2); }
    .hidden-res { display: none !important; }
</style>

<script>
    function filterReservations(event, filter) {
        // Gestion des onglets
        const buttons = document.querySelectorAll('.tab-btn');
        buttons.forEach(btn => {
            btn.classList.remove('active-tab');
            btn.classList.add('text-gray-500');
        });
        event.currentTarget.classList.add('active-tab');
        event.currentTarget.classList.remove('text-gray-500');

        // Filtrage des éléments
        const items = document.querySelectorAll('.res-item');
        items.forEach(item => {
            if (filter === 'all') {
                item.classList.remove('hidden-res');
            } else {
                item.classList.toggle('hidden-res', !item.classList.contains(filter));
            }
        });
    }
</script>
{% endblock %}