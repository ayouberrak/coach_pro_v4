{% extends "layouts/base.twig" %}

{% block title %}Mon Espace - CoachPro{% endblock %}

{% block content %}
<div class="dashboard-content">
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-white font-bold" style="font-size: 2rem;">Mon Espace Sportif</h1>
            <p class="text-gray">Prêt pour votre entraînement aujourd'hui?</p>
        </div>
        <a href="/sportif/coaches" class="btn btn-primary">
            <i class="fa-solid fa-magnifying-glass" style="margin-right: 0.5rem;"></i> Trouver un Coach
        </a>
    </div>

    <div class="stats-grid">
         <div class="card stat-card">
            <h3>SÉANCES COMPLÉTÉES</h3>
            <div class="stat-value">24</div>
            <div class="stat-trend">
                <i class="fa-solid fa-trophy"></i> Total à vie
            </div>
        </div>
         <div class="card stat-card">
            <h3>PROCHAINE SÉANCE</h3>
            <div class="stat-value" style="font-size: 1.5rem;">Aujourd'hui, 18:00</div>
             <div class="stat-trend">
                <i class="fa-solid fa-dumbbell"></i> Musculation avec Coach Mike
            </div>
        </div>
    </div>

    <div class="grid" style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-top: 2rem;">
        <!-- Left Column: Reservations -->
        <div class="card">
            <h2 class="text-white font-bold mb-4">Mes Réservations</h2>
             <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Coach</th>
                            <th>Date</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                         <tr>
                            <td>Coach Mike</td>
                            <td>10 Jan, 18:00</td>
                            <td><span class="status status-pending">Confirmé</span></td>
                        </tr>
                         <tr>
                            <td>Sarah Fit</td>
                            <td>12 Jan, 10:00</td>
                            <td><span class="status status-pending">En attente</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Right Column: Quick Profile/Tips -->
         <div class="card" style="background: linear-gradient(180deg, var(--bg-card) 0%, rgba(207, 170, 88, 0.05) 100%);">
            <h3 class="text-gold font-bold mb-2">Conseil du Jour</h3>
            <p class="text-gray mb-4" style="font-size: 0.9rem;">
                L'hydratation est la clé de la performance. Buvez au moins 500ml d'eau 2h avant votre séance.
            </p>
            <div style="width: 100%; height: 1px; background: var(--border-color); margin: 1rem 0;"></div>
             <h3 class="text-white font-bold mb-2">Mon Abonnement</h3>
             <div class="flex items-center justify-between">
                <span class="status status-active">Premium</span>
                <span class="text-gray" style="font-size: 0.8rem;">Expire le 20 Fév</span>
             </div>
        </div>
    </div>
</div>
{% endblock %}
